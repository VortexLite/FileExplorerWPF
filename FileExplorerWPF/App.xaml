<Application x:Class="FileExplorerWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FileExplorerWPF"
             StartupUri="views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/WindowButton.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxes.xaml"/>
                <ResourceDictionary Source="Themes/ListView.xaml"/>
                <ResourceDictionary Source="Resourses/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="4"
            ShadowDepth="0"/>

            <FontFamily x:Key="FontAwesome">/Fonts/fontawesome-webfont.ttf#FontAwesome</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
